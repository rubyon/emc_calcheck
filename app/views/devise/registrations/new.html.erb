<!--begin::Body-->
<div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12 p-lg-20">
  <!--begin::Card-->
  <div class="bg-body d-flex flex-column align-items-stretch flex-center rounded-4 w-md-600px p-20">
    <!--begin::Wrapper-->
    <div class="d-flex flex-center flex-column flex-column-fluid px-lg-10 pb-15 pb-lg-20">
      <!--begin::Form-->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!--begin::Heading-->
        <div class="text-center mb-11">
          <!--begin::Title-->
          <h1 class="text-dark fw-bolder mb-3">관리자 등록</h1>
          <!--end::Title-->
          <!--begin::Subtitle-->
          <%- flash.each do |name, msg| -%>
            <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
          <%- end -%>
          <!--end::Subtitle=-->
        </div>
        <!--begin::Heading-->
        <div class="row g-3 mb-9">
          <!--begin::Input group=-->
          <div class="fv-row mb-8">
            <!--begin::Email-->
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control bg-transparent" %>
            <!--end::Email-->
          </div>
          <!--end::Input group=-->
          <div class="fv-row mb-3">
            <!--begin::Password-->
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control bg-transparent" %>
            <!--end::Password-->
          </div>
          <div class="fv-row mb-3">
            <!--begin::Password-->
            <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control bg-transparent" %>
            <!--end::Password-->
          </div>
          <!--end::Input group=-->
        </div>
        <!--begin::Submit button-->
        <div class="d-grid mb-10">
          <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
            <!--begin::Indicator label-->
            <span class="indicator-label">관리자등록 하기</span>
            <!--end::Indicator label-->
          </button>
        </div>
        <!--end::Submit button-->
      <% end %>
      <!--end::Form-->
    </div>
    <!--end::Wrapper-->
    <!--begin::Footer-->
    <div class="d-flex flex-stack px-lg-10">
    </div>
    <!--end::Footer-->
  </div>
  <!--end::Card-->
</div>
<!--end::Body-->